# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/food_delivery
POSTGRES_PASSWORD=postgres-password

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://localhost:3001
RESTAURANT_SERVICE_URL=http://localhost:3002
DELIVERY_SERVICE_URL=http://localhost:3003

# Service Ports
USER_SERVICE_PORT=3001
RESTAURANT_SERVICE_PORT=3002
DELIVERY_SERVICE_PORT=3003

# Environment
NODE_ENV=development

# Security (change in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# Logging
LOG_LEVEL=info