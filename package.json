{
  "name": "food-delivery-backend",
  "version": "1.0.0",
  "scripts": {
    "dev:user": "cd user-service && npm run dev",
    "dev:restaurant": "cd restaurant-service && npm run dev",
    "dev:delivery": "cd delivery-service && npm run dev",
    "build": "npm run build --workspaces",
    "start": "concurrently \"npm run start:user\" \"npm run start:restaurant\" \"npm run start:delivery\"",
    "start:user": "cd user-service && npm start",
    "start:restaurant": "cd restaurant-service && npm start",
    "start:delivery": "cd delivery-service && npm start",
    "setup-db": "node scripts/setup-db.js",
    "test-endpoints": "node scripts/test-endpoints.js",
    "docker:dev": "docker-compose up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build"
  },
  "workspaces": ["user-service", "restaurant-service", "delivery-service"],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "axios": "^1.6.0"
  }
}